<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.news.activity.MainActivity">

    <include
        layout="@layout/layout_content_activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <android.support.design.widget.NavigationView
        android:id="@+id/navigetion_activity_main"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        app:headerLayout="@layout/layout_header_navgation_activity_main"
        app:menu="@menu/menu_navgetion_activity_main"
        android:layout_gravity="start"
        />


</android.support.v4.widget.DrawerLayout>
